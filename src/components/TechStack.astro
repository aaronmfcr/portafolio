<section
    class="py-10 border-y border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-[#151c2c]"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h3
            class="text-center text-sm font-semibold text-slate-500 uppercase tracking-wider mb-8"
        >
            Tecnolog√≠as Principales
        </h3>
        <div
            class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center justify-items-center opacity-70 grayscale hover:grayscale-0 transition-all duration-500"
        >
            <!-- React -->
            <div class="flex flex-col items-center gap-2 group cursor-default">
                <span
                    class="material-symbols-outlined text-4xl group-hover:text-[#61DAFB] transition-colors"
                    >code_blocks</span
                >
                <span class="text-sm font-medium">React</span>
            </div>
            <!-- Node -->
            <div class="flex flex-col items-center gap-2 group cursor-default">
                <span
                    class="material-symbols-outlined text-4xl group-hover:text-[#339933] transition-colors"
                    >dns</span
                >
                <span class="text-sm font-medium">Node.js</span>
            </div>
            <!-- Python -->
            <div class="flex flex-col items-center gap-2 group cursor-default">
                <span
                    class="material-symbols-outlined text-4xl group-hover:text-[#3776AB] transition-colors"
                    >terminal</span
                >
                <span class="text-sm font-medium">Python</span>
            </div>
            <!-- Database -->
            <div class="flex flex-col items-center gap-2 group cursor-default">
                <span
                    class="material-symbols-outlined text-4xl group-hover:text-[#00758F] transition-colors"
                    >database</span
                >
                <span class="text-sm font-medium">SQL</span>
            </div>
            <!-- Cloud -->
            <div class="flex flex-col items-center gap-2 group cursor-default">
                <span
                    class="material-symbols-outlined text-4xl group-hover:text-[#FF9900] transition-colors"
                    >cloud</span
                >
                <span class="text-sm font-medium">GCP</span>
            </div>
            <!-- Design -->
            <div class="flex flex-col items-center gap-2 group cursor-default">
                <span
                    class="material-symbols-outlined text-4xl group-hover:text-[#F24E1E] transition-colors"
                    >brush</span
                >
                <span class="text-sm font-medium">Wordpress</span>
            </div>
        </div>
    </div>
</section>
